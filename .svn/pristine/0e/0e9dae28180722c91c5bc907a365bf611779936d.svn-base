ul,ol {
list-style:none;
}

* {
margin:0;
padding:0;
}

.icon {
width:1em;
height:1em;
vertical-align:-.15em;
fill:currentColor;
overflow:hidden;
display:block;
}

html {
width:100%;
height:100%;
}

body {
overflow:hidden;
background:url(../../images/draw/canvas_bg.jpg) #f9f9f9;
width:100%;
height:100%;
cursor:crosshair;
margin:0;
padding:0;
}

button:hover {
background:#26C281;
}

button:hover:before {
width:45px;
left:150px;
}

#mycanvas {
display:block;
margin:0;
}

.react {
position:absolute;
border:1px dashed #09c;
width:0;
height:0;
top:0;
left:0;
background:#0099cc29;
}

.penrange {
width:100%;
}

input[type=range] {
-webkit-appearance:none;
width:100%;
background:0 no-repeat, #ddd;
background-size:100%;
height:3px;
outline:none;
}

input[type=range]::-webkit-slider-thumb {
-webkit-appearance:none;
height:26px;
width:26px;
background:#fff;
border-radius:50%;
border:solid 1px #ddd;
}

::-moz-range-track {
background:0 no-repeat, #ddd;
background-size:100% 100%;
}

::-moz-range-thumb {
height:26px;
width:26px;
background:#fff;
border-radius:50%;
border:solid 1px #ddd;
}

#penval {
font-size:12px;
width:26px;
height:20px;
background:#ccc;
text-align:center;
line-height:20px;
display:inline-block;
color:#000;
margin:0 6px;
}

#photoupload {
height:80%;
margin-top:2%;
}

.imgZoom{
	position: fixed;
	width: 500px;
    margin: auto;
}